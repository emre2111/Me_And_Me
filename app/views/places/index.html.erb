<div class="container">
  <div class="index-form">
    <%= form_tag(places_path, method: "get") do %>
      <%= label_tag(:q, "Continent:") %>
      <div class="select_tag">
      <%= select_tag "continent", options_for_select(Place.continents, params[:continent]), class: 'selection-form' %>
      </div>
      <%= label_tag(:q, "Remoteness:") %>
      <div class="select_tag">
        <%= select_tag "level_of_remoteness", options_for_select(Place.level_of_remoteness, params[:level_of_remoteness]), class: 'selection-form'%>
      </div>
      <div class="Search-button">
        <%= submit_tag "Search", class:"btn-ghost btn-search" %>
      </div>
    <% end %>
  </div>

  <div class="title">
    <h3 class="recommended">Recommended places<%= " in #{@places[0].continent}" if params[:continent] %></h3>
  </div>
  <div class="row places-row">

  <% @places.each do |place| %>
      <%= render 'shared/card', place: place %>
  <% end %>
  </div>
</div>
