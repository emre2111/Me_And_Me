<div class="container">
  <div class="show-container">
    <div class="show-description">
      <div class="booking-description text-center">
        <h3><strong class="booked-place"><%=  @booking.place.name  %></strong> -
          <%= @booking.place.continent %></h3>
          <p>Check-In :<%= @booking.check_in %></p>
          <p>Check-Out :<%= @booking.check_out %></p>
          <p class="text-center"><em>Below you can change the dates of your booking</em></p>
        </div>
        <div class="form">
          <%= render 'shared/form', place: @booking.place %>
        </div>
      </div>
      <div class="show-image" style="background-image: url(<%= @booking.place.photo%> ) "></div>
    </div>
  </div>
