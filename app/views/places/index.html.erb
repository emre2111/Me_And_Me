<div class="container">
  <div "index-form">
    <%= form_tag(places_path, method: "get") do %>
      <%= label_tag(:q, "Continent:") %>
      <% continents = [] %>
      <div class="select_tag">
      <%= select_tag "continent", options_for_select(Place.continents), class: 'selection-form' %>
      </div>
      <%= label_tag(:q, "Remoteness:") %>
      <div class="select_tag">
        <%= select_tag "level_of_remoteness", options_for_select(Place.level_of_remoteness), class: 'selection-form'%>
      </div>
      <div class="Search-button">
        <%= submit_tag "Search", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="title">
    <h3>Recommended for you</h3>
  </div>
  <div class="row places-row">

  <% @places.each do |place| %>
      <%= render 'shared/card', place: place %>
  <% end %>
  </div>
</div>
